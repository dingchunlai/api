    </div>
    </div>
    <div class="fuckcaselist1 clearfix">
      <ul>
      <%if !@caselist.nil?%>
		<%for c in @caselist%>
		<%des = Case.get_photo_photo(c.ID)%>
		<%pathurl = gen_firm_city_case_detail(@decofirm.id,c.ID)%>
